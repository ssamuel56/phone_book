<h2>Create a User</h2>

<% if valid == false%>
  <h2 style="color:red">Please use a correct username and password</h2>
<% end%>

<form class="login" action="/create" method="post">

  <div class="">
    <h3>Username</h3>
    <input type="text" name="username" required>
  </div>

  <div class="">
    <h3>Password</h3>
    <input type="password" name="password" required>
  </div>

  <br>
  <input type="submit" name="submit" value="create">

</form>
