<form class="login" action="/login" method="post">

  <h2 style="color:red">Please use a correct username and password</h2>

  <div class="">
    <h2>Username</h2>
    <input type="text" name="username" pattern="[a-zA-Z0-9]{3,20}" required>
  </div>

  <div class="">
    <h2>Password</h2>
    <input type="password" name="password" pattern="[a-zA-Z0-9]{3,20}" required>
  </div>

  <br>
  <input type="submit" name="submit" value="Submit">

</form>

<hr>

<div class="newUser">
  <h2>New User?</h2>
  <br>
  <a href="/create">Create Account</a>
</div>
